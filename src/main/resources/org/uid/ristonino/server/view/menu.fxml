<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.uid.ristonino.server.controller.MenuController">
   <center>
      <TabPane stylesheets="@../css/tab.css" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab fx:id="categoriaTab" text="Categorie">
               <content>
                  <AnchorPane>
                     <children>
                        <BorderPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                           <center>
                              <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                                 <children>
                                    <ListView fx:id="categoriaListView" prefHeight="200.0" prefWidth="200.0" />
                                    <HBox>
                                       <children>
                                          <Button fx:id="creaCategoriaBtn" mnemonicParsing="false" text="Crea Categoria" onAction="#addCategory">
                                             <HBox.margin>
                                                <Insets right="10.0" />
                                             </HBox.margin>
                                          </Button>
                                          <Button fx:id="rimuoviCategoriaBtn" mnemonicParsing="false" text="Rimuovi Categoria" />
                                       </children>
                                       <VBox.margin>
                                          <Insets bottom="5.0" top="5.0" />
                                       </VBox.margin>
                                    </HBox>
                                 </children>
                                 <BorderPane.margin>
                                    <Insets />
                                 </BorderPane.margin>
                              </VBox>
                           </center>
                        </BorderPane>
                     </children>
                  </AnchorPane>
               </content></Tab>
          <Tab fx:id="articoliTab" text="Articoli">
               <content>
                  <AnchorPane>
                     <children>
                        <BorderPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                           <center>
                              <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                                 <children>
                                    <ListView fx:id="articoliListView" prefHeight="200.0" prefWidth="200.0" />
                                    <HBox>
                                       <children>
                                          <Button fx:id="creaArticoloBtn" mnemonicParsing="false" text="Crea Articolo">
                                             <HBox.margin>
                                                <Insets right="10.0" />
                                             </HBox.margin>
                                          </Button>
                                          <Button fx:id="rimuoviArticoloBtn" mnemonicParsing="false" text="Rimuovi Articolo" />
                                       </children>
                                       <VBox.margin>
                                          <Insets bottom="5.0" top="5.0" />
                                       </VBox.margin>
                                       <padding>
                                          <Insets right="10.0" />
                                       </padding>
                                    </HBox>
                                 </children>
                              </VBox>
                           </center>
                        </BorderPane>
                     </children>
                  </AnchorPane>
               </content></Tab>
            <Tab fx:id="ingredientiTab" text="Ingredienti">
                <content>
                    <AnchorPane>
                        <children>
                            <BorderPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                                <center>
                                    <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                                        <children>
                                          <ListView fx:id="IngredientiListView" prefHeight="200.0" prefWidth="200.0" />
                                    <HBox>
                                       <children>
                                                  <Button fx:id="creaIngredientiBtn" mnemonicParsing="false" text="Crea Ingrediente">
                                             <HBox.margin>
                                                <Insets right="10.0" />
                                             </HBox.margin>
                                          </Button>
                                                  <Button fx:id="rimuoviIngredientiBtn" mnemonicParsing="false" text="Rimuovi Ingrediente" />
                                       </children>
                                       <VBox.margin>
                                          <Insets bottom="5.0" top="5.0" />
                                       </VBox.margin>
                                       <padding>
                                          <Insets right="10.0" />
                                       </padding>
                                    </HBox>
                                        </children>
                                    </VBox>
                                </center>
                            </BorderPane>
                        </children>
                    </AnchorPane>
                </content></Tab>
            <Tab fx:id="flagTab" text="Allergeni e altro">
            <content>
                <AnchorPane>
                    <children>
                        <BorderPane AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
                            <center>
                                <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
                                    <children>
                                      <ListView fx:id="flagListView" prefHeight="200.0" prefWidth="200.0" />
                                    <HBox>
                                       <children>
                                              <Button fx:id="creaFlagBtn" mnemonicParsing="false" text="Crea Flag" />
                                              <Button fx:id="rimuoviFlagBtn" mnemonicParsing="false" text="Rimuovi Flag" />
                                       </children>
                                    </HBox>
                                    </children>
                                </VBox>
                            </center>
                        </BorderPane>
                    </children>
                </AnchorPane>
            </content>
            </Tab>
        </tabs>
      </TabPane>
   </center>

</BorderPane>
