<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.uid.ristonino.server.controller.DashboardController">
    <BorderPane prefHeight="600.0" prefWidth="1000.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <top>
          <Text stroke="BLACK" strokeType="OUTSIDE" strokeWidth="0.0" text="Dashboard" BorderPane.alignment="CENTER">
              <font>
                  <Font size="30.0"/>
              </font>
              <BorderPane.margin>
                  <Insets/>
              </BorderPane.margin>
          </Text>
        </top>
        <center>
            <GridPane gridLinesVisible="true" BorderPane.alignment="CENTER">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                </rowConstraints>
                <BorderPane.margin>
                    <Insets/>
                </BorderPane.margin>
                <padding>
                    <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                </padding>
                <PieChart title="Coperti (Liberi vs Occupati)"/>
                <StackedBarChart title="Guadagni (Ultimi 7 giorni)" GridPane.columnIndex="1">
                    <xAxis>
                        <CategoryAxis side="BOTTOM"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis side="LEFT"/>
                    </yAxis>
                </StackedBarChart>
                <LineChart title="Guadagni (Anno)" GridPane.columnIndex="1" GridPane.rowIndex="1">
                    <xAxis>
                        <CategoryAxis side="BOTTOM"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis side="LEFT"/>
                    </yAxis>
                </LineChart>
                <GridPane gridLinesVisible="true" GridPane.rowIndex="1">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                    </rowConstraints>
                    <padding>
                        <Insets bottom="2.0" left="2.0" right="2.0" top="2.0"/>
                    </padding>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Ordini totali:" textAlignment="CENTER"
                          GridPane.halignment="CENTER">
                        <font>
                            <Font size="20.0"/>
                        </font>
                    </Text>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Conti Aperti:" textAlignment="CENTER"
                          GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                        <font>
                            <Font size="20.0"/>
                        </font>
                        <GridPane.margin>
                            <Insets/>
                        </GridPane.margin>
                    </Text>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Conti Pagati:" textAlignment="CENTER"
                          GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1"
                          GridPane.valignment="CENTER">
                        <font>
                            <Font size="20.0"/>
                        </font>
                    </Text>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Prenotazioni Totali:"
                          textAlignment="CENTER" GridPane.halignment="CENTER" GridPane.rowIndex="1"
                          GridPane.valignment="CENTER">
                        <font>
                            <Font size="20.0"/>
                        </font>
                    </Text>
                </GridPane>
            </GridPane>
        </center>
    </BorderPane>
</AnchorPane>
